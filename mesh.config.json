{
  "meshConfig": {
    "sources": [
      {
        "name": "CommerceGRAPHQL",
        "handler": {
          "graphql": {
            "endpoint": "<YOUR_COMMERCE_INSTANCE_URL>/graphql/"
          }
        }
      },
      {
        "name": "OMS",
        "handler": {
          "JsonSchema": {
            "baseUrl": "https://675172-bcnworkshopoms-stage.adobeio-static.net/api/v1/web/oms-app-builder/",
            "operations": [
              {
                "type": "Query",
